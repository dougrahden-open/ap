apiVersion: apps/v1
kind: Deployment
metadata:
  name: model-selector
  namespace: portal
  labels:
    app: model-selector
spec:
  replicas: 1
  selector:
    matchLabels:
      app: model-selector
  template:
    metadata:
      labels:
        app: model-selector
    spec:
      containers:
        - name: nginx
          image: nginx:alpine
          ports:
            - containerPort: 80
              name: http
          volumeMounts:
            - name: html
              mountPath: /usr/share/nginx/html
              readOnly: true
          resources:
            requests:
              memory: "32Mi"
              cpu: "25m"
            limits:
              memory: "64Mi"
              cpu: "50m"
      volumes:
        - name: html
          configMap:
            name: model-selector-html

-----

apiVersion: v1
kind: Service
metadata:
  name: model-selector
  namespace: portal
  labels:
    app: model-selector
spec:
  selector:
    app: model-selector
  ports:
    - name: http
      port: 80
      targetPort: http
